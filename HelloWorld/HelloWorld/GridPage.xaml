<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld.GridPage"
             Padding="20">
    <Grid BackgroundColor="Aqua" RowSpacing="20" ColumnSpacing="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Text="label 1" BackgroundColor="Pink"/>
        <Label Grid.Row="0" Grid.Column="1" Text="label 2" BackgroundColor="Pink"/>
        <Label Grid.Row="1" Grid.Column="0" Text="label 3" BackgroundColor="Pink"/>
        <Label Grid.Row="1" Grid.Column="1" Text="label 4" BackgroundColor="Pink"/>
        <Label Grid.Row="2" Grid.ColumnSpan="3" Text="label 5" BackgroundColor="Pink"/>
        <Label Grid.Column="2" Grid.RowSpan="2" Text="label 6" BackgroundColor="Pink"/>
    </Grid>
    
</ContentPage>