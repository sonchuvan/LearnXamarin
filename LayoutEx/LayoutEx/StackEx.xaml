<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LayoutEx.StackEx"
             Padding="20" BackgroundColor="#127ac7">
    <StackLayout VerticalOptions="Center"
                 Spacing="20">
        <Label HorizontalOptions="Center"
               FontSize="30"
               FontAttributes="Bold"
               Text="Welcome to Xamarin"/>
        <Label HorizontalOptions="Center"
               Text="Cross-platform apps made easy"
               FontSize="18"/>
        <Button WidthRequest="90" HorizontalOptions="Center"  BackgroundColor="#1dabf0"
                Text="Login" />
        <Button BackgroundColor="#1dabf0"
                Text="Register" />
    </StackLayout>
</ContentPage>